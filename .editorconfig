# https://editorconfig.org
# 李立 2023-01-30
# 所有的编辑器都支持 .editorconfig 文件，它可以帮助开发者在不同的编辑器和 IDE 之间定义和维护一致的编码样式。
# vscode 需要安装插件 EditorConfig for VS Code
# 下面是一个常用的配置规则，可以根据自己的需求进行修改。

root = true

[*] # 表示所有文件适用
charset = utf-8 # 设置文件字符集为utf-8
indent_style = space # 缩进风格 {tab | space}
indent_size = 2 # 缩进大小
end_of_line = lf # 换行符 {lf | crlf}
insert_final_newline = true # 始终在文件末尾插入一个空行
trim_trailing_whitespace = true # 去除行首的任意空白字符

[*.md] # 表示所有.md文件适用
trim_trailing_whitespace = false
max_line_length = off

[*.json] # 表示所有.json文件适用
